<%- include partials/main_nav.ejs %>  

<main>
    <div id="wrapper">    
        <div class="uk-container my-5">
            <h1 class="main-text text-center">About learnt</h1>
            <h3 class="main-text text-center">teachers + students = community</h3>
            <p class="uk-text-large">We are a passionate community of teachers and students from over 100 countries and territories around the world with diverse interests who are dedicated towards sharing knowledge and experience with each other.</p>

            <h2 class="main-text text-center">Made in Toronto, Canada</h2>
        </div>
    </div>    
</main>


<!-- Login Modal -->
    <div id="login-modal" class="uk-modal-full" uk-modal>
      <div class="uk-modal-dialog">
          <button class="uk-modal-close-full uk-close-large" type="button" uk-close></button>
          <div class="uk-grid-collapse uk-child-width-1-2@s uk-flex-middle" uk-grid>
              <div class="uk-background-cover" style="background-image: url('/Assets/images/loginPic.jpg');" uk-height-viewport></div>
              <div class="uk-padding-large">

                  <h1 class="main-text mb-0">Login</h1>

                   <!-- BEGIN SECTION : FORM  -->
                   <form class="uk-form-horizontal my-5 d-block mx-auto" method="POST" autocomplete="off">
    
                    <div >
                        <!-- USERNAME -->
                        <div class="mb-3 mt-0">
                            <label class="uk-form-label uk-text-large main-text" for="username">UserName</label>
                            <div class="uk-form-controls">
                                <input class="uk-form-large " id="username" type="text" placeholder="Username" name="username" required autofocus>
                            </div>
                        </div>
    
                         <!-- PASSWORD -->
                         <div class="mb-3">
                            <label class="uk-form-label uk-text-large main-text" for="password">Password</label>
                            <div class="uk-form-controls">
                                <input class="uk-form-large " id="password" type="password" placeholder="Password" name="password" required>
                            </div>
                        </div>
    
                    </div>

                    <!-- LOGIN AND CANCEL -->
                    <div class="text-center mt-4">
                        <button class="uk-button uk-button-primary main-text" type="submit" id="sendButton"><span uk-icon="sign-in"></span> Login</button>
                        <a class="uk-button uk-button-danger main-text" href="/"><span class="uk-margin-small-right" uk-icon="close"></span> Cancel</a>
                    </div>  
    
                  </form> 
                  <!-- END SECTION : FORM  -->
              </div>
          </div>
      </div>
    </div>
    <!-- Login Modal -->

